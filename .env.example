# M-Pesa Daraja API Configuration
# Copy this file to .env and fill in your actual values

# Required Configuration
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_ENVIRONMENT=sandbox
MPESA_SHORT_CODE=174379

# Optional Configuration (required for specific operations)
MPESA_INITIATOR_NAME=testapi
MPESA_SECURITY_CREDENTIAL=your_security_credential_here
MPESA_CERTIFICATE_PATH=./certificates/sandbox.cer
MPESA_PASSKEY=your_passkey_here

# Test Environment (for running tests)
# These are used in .env.test file
MPESA_TEST_PHONE=254712345678
MPESA_TEST_AMOUNT=1000
MPESA_TEST_CALLBACK_URL=https://yourdomain.com/callback
